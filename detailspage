        require("../assets/img/5.webp"),
        require("../assets/img/6.webp"),
      ],
    }
  },
  methods:{
    show_nav(){
      if(!this.nav){
        this.nav=true;
      }else{
        this.nav=false;
      }
    },
    show_footer(){
      if(!this.footer){
        this.footer=true;
      }else{
        this.footer=false;
      }
    },
    show(){
      if(!this.show){
        this.show=true;
      }
    }
  },
  computed:{
    
  },
 
}
</script>
